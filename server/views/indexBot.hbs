<h5 class="text-center">{{title}}</h5>
<div class="container-sm">
  <form id='telegramForm' action="/zayavka" method="post" class="form"
    enctype="application/x-www-form-urlencoded">
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Ваше Имя</label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" id="inputEmail3">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Телефон</label>
      <div class="col-sm-10">
        <input type="tel" name="phone" class="form-control" id="inputPassword3">
      </div>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Ваше сообщение</label>
      <textarea name="message" rows="3" class="form-control" id="exampleFormControlTextarea1"></textarea>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="val" id="exampleRadios1" value="1">
      <label class="form-check-label" for="exampleRadios1">
        Рассчитать стоимость
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="val" id="exampleRadios2" value="0">
      <label class="form-check-label" for="exampleRadios2">
        Сделать замер
      </label>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Отправить сообщение</button>
      </div>
    </div>
  </form>

</div>
